{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "esnext", 
    "moduleResolution": "node",
    "sourceMap": true,
    "isolatedModules": false, 
    "lib": ["es6"],
    "outDir": "dist",
    "baseUrl": "./",
    "paths": {
      "~/*": ["*"], // resolve any `~/foo/bar` to `<baseUrl>/foo/bar`
    }, 
    "allowSyntheticDefaultImports": true,
  },
  "exclude": [
    "node_modules"
  ]
}